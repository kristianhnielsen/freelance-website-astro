---
import { setDefaultNamespace, t } from "i18next";
import Button from "./Button.astro";

setDefaultNamespace("common");
---

<section class="cta">
  <h2>{t("cta.title")}?</h2>
  <p>{t("cta.prompt")}!</p>
  <div class="buttons">
    <Button href="/contact" primary>{t("nav.contact")}</Button>
  </div>
</section>

<style lang="scss">
  .cta {
    & h2 {
      color: var(--accent-primary);
    }

    & p {
      color: var(--dark);
      font-size: 20px;
    }
  }
</style>
