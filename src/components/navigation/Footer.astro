---
const today = new Date();
import { setDefaultNamespace, t } from "i18next";
import { localizePath } from "astro-i18next";

setDefaultNamespace("common");
---

<footer>
  <h2>{t("nav.navigation")}</h2>
  <nav>
    <ul>
      <li>
        <a href={localizePath("/")}>{t("nav.home")}</a>
      </li>
      <li>
        <a href={localizePath("/services")}>{t("nav.services")}</a>
      </li>
      <li>
        <a href={localizePath("/about")}>{t("nav.about")}</a>
      </li>
      <li>
        <a href={localizePath("/blog")}>{t("nav.blog")}</a>
      </li>
      <li>
        <a href={localizePath("/contact")}>{t("nav.contact")}</a>
      </li>
    </ul>
  </nav>
  <p>&copy; {today.getFullYear()} Kristian Nielsen</p>
</footer>

<style lang="scss">
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--dark);
    margin: 60px 0;
  }

  h2 {
    color: var(--accent-primary);
  }

  p {
    color: var(--accent-secondary);
  }

  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin: 30px 0;

    & ul {
      display: flex;
      flex-direction: inherit;
      gap: inherit;
      text-align: center;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    & a {
      color: var(--white);
    }
  }
</style>
